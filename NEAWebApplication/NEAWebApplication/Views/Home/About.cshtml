@{
    ViewBag.Title = "Enter Launch Details";
    ViewBag.Write = " ";
}
<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>
    <p>This will be communicated to the Air Traffic Controller, and added onto the list.</p>
    @model NEAWebApplication.FLIGHT

    <form asp-action="SearchPilot" method="post">
        <p>P1 (Pilot 1's) Details:</p>
        <input asp-for="Pilot1.FirstName" placeholder="First Name" required />
        <input asp-for="Pilot1.SurName" placeholder="Surname" required />
        <input asp-for="Pilot1.LastName" placeholder="Membership Number" required />
        <button type="submit" class="btn btn-outline-dark" href="">Confirm Pilot (P1) &raquo;</button>

        <p>P2 (Pilot 2's) Details:</p>
        <input asp-for="Pilot2.FirstName" placeholder="First Name" required />
        <input asp-for="Pilot2.SurName" placeholder="Surname" required />
        <input asp-for="Pilot2.LastName" placeholder="Membership Number" required />
        <button type="submit" class="btn btn-outline-dark" href="">Confirm Pilot (P2) &raquo;</button>
        <p> </p>

        <p>If an instructor is onboard, please ask the instructor to fill in the following details.</p>
        <p>Instructor's Details:</p>
        <input asp-for="Instructor.FirstName" placeholder="First Name" />
        <input asp-for="Instructor.SurName" placeholder="Surname" />
        <input asp-for="Instructor.LastName" placeholder="Instructor Number" />
        <button type="submit" class="btn btn-outline-dark" href="">Confirm Instructor &raquo;</button>
        @if (ViewBag.Pilot1Confirmed != null)
        {
            <p>Pilot 1 Confirmation: @(ViewBag.Pilot1Confirmed ? "Confirmed" : "Not Found")</p>
        }
        @if (ViewBag.Pilot2Confirmed != null)
        {
            <p>Pilot 2 Confirmation: @(ViewBag.Pilot2Confirmed ? "Confirmed" : "Not Found")</p>
        }
        @if (ViewBag.InstructorConfirmed != null)
        {
            <p>Instructor Confirmation: @(ViewBag.InstructorConfirmed ? "Confirmed" : "Not Found")</p>
        }
